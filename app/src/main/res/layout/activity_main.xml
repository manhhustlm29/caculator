<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:backgroundTint="#BDB8B8"
        android:foregroundTint="#908888"
        android:paddingTop="100dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/ce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#DCD4D4"
            android:backgroundTint="#cccccc"

            android:backgroundTintMode="src_atop"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#8C7E7E"
            android:backgroundTint="#665555"
            android:text="C"
            android:textColor="#070707"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:text="BS"
            android:textColor="#070707"
            android:textSize="30dp" />

        <Button
            android:id="@+id/chia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:text="/"
            android:textColor="#070707"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="7"
            android:textColor="#070707"
            android:textSize="30dp" />

        <Button

            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="8"
            android:textColor="#070707"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/nhan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/tru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/cong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/badau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/cham"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"

            />
        <Button
            android:id="@+id/bang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textColor="#070707"
            android:textSize="30dp"
            android:background="#D3D3D3"
            android:layout_margin="5dp"
            />

    </LinearLayout>
</LinearLayout>